@model PostCreateViewModel

<form action="Edit" method="post">
<div class="row" >
    <div class="col-9">
        <div class="bg-white p-4">
            <h1>Haber DÃ¼zenleme</h1>           
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="PostId">
                <div class="mb-3">
                    <label asp-for="Title" class="form-label"></label>
                    <input asp-for="Title" class="form-control">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <input asp-for="Description" class="form-control">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Url" class="form-label"></label>
                    <input asp-for="Url" class="form-control">
                    <span asp-validation-for="Url" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Content" class="form-label"></label>
                    <textarea asp-for="Content" class="form-control"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                
                @if(User.FindFirstValue(ClaimTypes.Role) == "admin"){
                    <div class="form-check mb-3">
                        <input asp-for="IsActive" class="form-check-input">
                        <label asp-for="IsActive" class="form-check-label"></label>
                    </div>
                }



                <button type="submit" class="btn btn-primary">Kaydet</button>

        </div>
    </div>
    <div class="col-3">
        <div class="bg-white p-4">

            @* tekrar bak *@
            @foreach(var category in ViewBag.Categories){          
            <div class="form-check">
                <input type="checkbox" class="from-check-input" name="tagIds" value="@category.CategoryId" id="tag_@category.CategoryId"
                    @(Model.Categories.Any(i=>i.CategoryId == category.CategoryId) ? "checked" : "" )
                > 
                <label for="tag_@category.CategoryId" class="form-check-label">
                    @category.Text
                </label>
            </div>
             }
        </div>
    </div>
</div>
</form>
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tinymce/6.7.0/tinymce.min.js"></script>
    <script>
        tinymce.init({
            selector: '#Content'
        });
    </script>

}