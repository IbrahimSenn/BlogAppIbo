<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/lib/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/lib/bootstrap-icons/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <title>Document</title>
</head>
<body style="background-color:rgba(18,22,27,255);">
    <nav class="navbar navbar-expand-lg bg-dark shadow-sm">
        <div class="container" >
            <a href="/posts" class="navbar-brand" style="color: red;">
                 Bi Haber ?
            </a>

            <ul class="navbar-nav ms-auto">
                @if(User.Identity!.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a href="/posts/list" class="nav-link" style="color: white;">Posts</a>
                    </li>
                    <li class="nav-item">
                        <a href="/profile/@User.Identity.Name" class="nav-link" style="color: white;">@User.Identity.Name</a>
                    </li>
                    <li class="nav-item">
                        <a href="/users/logout" class="nav-link" style="color: white;">Logout </a>
                        
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a href="/users/login" class="nav-link" style="color: white;">Login</a>
                    </li>
                    <li class="nav-item">
                        <a href="/users/register" class="nav-link" style="color: white;">Register</a>
                    </li>
                }              
            </ul>
        </div>
    </nav>
    <div class="container mt-3">
        @RenderBody()
    </div>
    @RenderSection("Scripts", required: false)
    
</body>



</html>

